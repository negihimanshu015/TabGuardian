{
    "manifest_version": 3,
    "name": "TabGuardian",
    "description": "Save and recover your browser tabs easily.",
    "version": "1.0",
    "action": { 
        "default_popup":"TabGuardian/TabGuardian.html"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },    
    "permissions":[        
        "storage",
        "scripting",
        "tabs",
        "windows"

    ],
    "host_permissions":[
        "http://*/*",
        "https://*/*"
    ]   
    
}